<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8"/>
    <title>{% block title %}{% endblock %}</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" href="{{ asset('css/global.css') }}">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,700" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Merriweather:300,400,700" rel="stylesheet">
    {% block stylesheets %}{% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
</head>
<body>

{% block menu %}
    {% if app.request.get('_route') != 'login' and app.request.get('_route') != 'inscription' and app.request.get('_route') != 'admin'  %}
        <div class="menu">
            <div class="menu-item first logo">
                {% if app.request.get('_route') == 'game' %}
                    <a href="{{ path('homepage') }}"><img src="{{ asset('img/gfi-logo3.png') }}" /></a>
                {% else %}
                    <a href="{{ path('homepage') }}"><img src="{{ asset('img/gfi-logo3.png') }}" /></a>
                {% endif %}
            </div>
            {% if app.request.get('_route') != 'game' %}
            <div class="menu-item">
                <span>
                    <a href="{{ path('homepage') }}">Accueil</a>
                </span>
            </div>
            <div class="menu-item">
                <span>
                    <a href="{{ path('game') }}">Jouer</a>
                </span>
            </div>
            <div class="menu-item">
                <span>
                    <a href="{{ path('evolution') }}">Evolution</a>
                </span>
            </div>
                    <div class="menu-item">
                <span>
                    <a href="{{ path('homepage') }}">Déconnexion</a>
                </span>
            </div>
            {% endif %}
        </div>
    {% endif %}
{% endblock %}
{% block body %}{% endblock %}
{% block footer %}
    <div class="footer container-fluid">
        <div class="row">
            <div class="col-lg-2">
                <img src="{{ asset('img/gfi-transparent.png') }}">
                <div id="copyright">
                    2017 GFI Informatique<br>
                    Tous droits réservés
                </div>
            </div>
            <div class="col-lg-offset-1 col-lg-2 menu-footer">
                <span class="orange">Découvrir GFI</span><br><br>
                Accueil<br>
                Offres<br>
                Innovations<br>
                Actualités<br>
            </div>
            <div class="col-lg-offset-1 col-lg-2 menu-footer">
                <span class="orange">Groupe</span><br><br>
                Carrière<br>
                Finance<br>
                Presse<br>
                Intranet<br>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    <script src="https://code.jquery.com/jquery-3.2.1.min.js"
            integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4="
            crossorigin="anonymous"></script>
    <script type="text/javascript" src="{{ asset('js/Chart.min.js') }}"></script>

{% endblock %}
</body>

</html>
